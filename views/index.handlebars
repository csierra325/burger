<div class="container">


  <img src="/assets/img/animated burger.jpg" class= "burgerImg">
  
  <h1>Eat-Da-Burger!</h1>

  <form class="create-form">

    <div class="form-group">
      <label for="name"></label>
      <input type="text" id="burger_name" name="burger_name">
    </div>

    <button type="submit" class = "button">Submit</button>

    <p>Enter the burger you want to eat Click the submit button.</p>

     <div class="col-md-5 col-right">
            {{#each burgers}}
                {{#if devoured}}
                    <div>{{id}}. {{burger_name}}</div>
                {{/if}}
            {{/each}}        
        </div> 

<h2>Uneated Burgers</h2>
        <div class="col-md-5 col-right">
            {{#each burgers}}
                {{#unless devoured}}
                    <div>{{id}}. {{burger_name}}</div>
                    <form>
                    <input type = "hidden" id = "devoured" name="devoured" value="true">
                    <button class="devourBtn" type="submit">Devour!</button>
                    </form>
                {{/unless}}
            {{/each}}        
        </div> 

  </form>


</div>